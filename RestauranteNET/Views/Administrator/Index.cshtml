@{
    ViewData["Title"] = "Administrador - Restaurant .NET";
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/administrator.css" asp-append-version="true">
</head>
<body>
    <header class="topbar">
        <div class="logo">
            <a asp-controller="Administrator" asp-action="Index">
                <img src="~/imgs/NET.png" alt="Logo">
            </a>
        </div>
        <nav class="topbar-actions">
            <a asp-controller="Administrator" asp-action="Orders" class="orders-btn">Pedidos e Reservas</a>
            <div class="user-menu">
                <img src="~/imgs/user-icon.png" alt="Usuário" class="user-icon">
                <div class="dropdown">
                    <a asp-area="Identity" asp-page="/Account/Manage/Index">Configurações</a>
                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" method="post" style="margin:0;">
                        <button type="submit" style="background:none;border:none;color:#f5f5f5;padding:0.8rem;width:100%;text-align:left;cursor:pointer;">Logout</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="admin-container">
        <h1>Gerenciar Menu</h1>
        <button id="add-food-btn" class="add-btn">➕ Adicionar Nova Comida</button>
        <ul id="food-list" class="food-list"></ul>
        <div id="pagination" class="pagination"></div>

        <!-- Modal para nova comida -->
        <div id="add-food-modal" class="modal" style="display: none;">
            <div class="modal-content">
                <h2>Adicionar Nova Comida</h2>
                <form id="add-food-form">
                    <div class="form-group">
                        <label for="food-name">Nome *</label>
                        <input type="text" id="food-name" required>
                        <p class="error-message" id="food-name-error"></p>
                    </div>
                    <div class="form-group">
                        <label for="food-description">Descrição</label>
                        <textarea id="food-description" rows="3"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="food-price">Preço *</label>
                        <div class="price-input-container">
                            <span class="currency">R$</span>
                            <input type="text" id="food-price" placeholder="0,00" required>
                        </div>
                        <p class="error-message" id="food-price-error"></p>
                    </div>
                    <div class="form-group">
                        <label for="food-chef">Recomendação do Chef</label>
                        <input type="checkbox" id="food-chef">
                    </div>
                    <div class="form-group">
                        <label for="food-image">Imagem</label>
                        <input type="file" id="food-image" accept="image/png,image/jpeg,image/jpg">
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="save-btn">Salvar</button>
                        <button type="button" id="cancel-add-food" class="cancel-btn">Cancelar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="~/js/administrator.js" asp-append-version="true"></script>
</body>
</html>